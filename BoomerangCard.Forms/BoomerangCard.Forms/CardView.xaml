<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="BoomerangCard.Forms.CardView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="BoxView">
                <Setter Property="WidthRequest" Value="210" />
                <Setter Property="HeightRequest" Value="140" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="BackgroundColor" Value="#f3f3f3" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <Grid>
        <BoxView BackgroundColor="{Binding CardBackgroundColor}" />
        <BoxView
            WidthRequest="32"
            HeightRequest="32"
            Margin="0,60,120,0"
            CornerRadius="16" />
        <BoxView
            WidthRequest="80"
            HeightRequest="12"
            Margin="0,40,0,0"
            CornerRadius="6" />
        <BoxView
            WidthRequest="50"
            HeightRequest="12"
            Margin="0,80,30,0"
            CornerRadius="6" />
    </Grid>
</ContentView>